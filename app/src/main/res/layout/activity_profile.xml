<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textViewUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your full name" />

        <EditText
            android:id="@+id/editTextUniversity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter University Name" />

        <TextView
            android:id="@+id/textViewInterest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="What are you interested in?"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <CheckBox android:id="@+id/checkbox_security"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/checkbox_apps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Development"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/checkbox_robotics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Robotics"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/checkbox_webDev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Web Development"
            android:onClick="onCheckboxClicked"/>

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Information" />

        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Logout" />

    </LinearLayout>
</RelativeLayout>